[Unit]
Description=KWanata KWin-Script to Kanata bridge.
After=kanata.service
Wants=kanata.service
PartOf=kanata.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 _/workarea/dev/kde/KWanata/server/focus_to_kanata.py --port 10101 -c _/workarea/dev/kde/KWanata/server/config.toml
Restart=no

[Install]
WantedBy=default.target
